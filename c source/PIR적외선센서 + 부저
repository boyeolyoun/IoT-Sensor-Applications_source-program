#include <wiringPi.h>
#include <stdio.h>

#define INFRARED 11
#define BUZZER 0
#define LED 1

int main (void) {

	if(wiringPiSetup() == -1) {
		return 1;
		}
		
	pinMode(INFRARED, INPUT);
	pinMode(BUZZER ,OUTPUT);
	pinMode(LED, OUTPUT);
	
	for(;;){
		if(digitalRead(INFRARED) == HIGH){
			digitalWrite(BUZZER, HIGH);
			digitalWrite(LED, HIGH);
		}else{
			digitalWrite(BUZZER, LOW);
			digitalWrite(LED, LOW);
			
			}
		}
	}
	return 0;
}
